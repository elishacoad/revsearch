{
    "extends": "airbnb",
    "rules": {
        "no-console" : "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/prop-types": [
            0
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "linebreak-style": 0
    },
    "env": {
        "browser": true,
        "node": true
    },    
    "settings": {
        "import/resolver": "webpack"
    },
    "globals": {
        "fetch": false,
        "document": false,
        "window": false,
        "render": false
    }
}